<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="@dimen/appbar_padding_top"
    android:layout_margin="4dp"
    app:cardCornerRadius="@dimen/appbar_padding_top">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="8dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image_perfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/img_cliente"
                android:layout_width="62dp"
                android:layout_height="80dp"
                android:layout_gravity="right"


                android:layout_marginRight="@dimen/activity_horizontal_margin"

                android:contextClickable="true" />

            <TextView
                android:id="@+id/anuncio_fecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/anuncio_descripcion"
                android:layout_margin="4dp"
                android:layout_toRightOf="@id/img_cliente"
                android:text="Fecha publicación: 01/01/2019"
                android:textSize="10dp" />


            <TextView
                android:id="@+id/anuncio_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_toRightOf="@+id/img_cliente"
                android:text="Nombre Artículo"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/anuncio_precioList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="270dp"
                android:layout_marginTop="4dp"
                android:text="8euros"
                android:textColor="#009688"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/anuncio_descripcion"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/anuncio_author"
                android:layout_margin="4dp"
                android:layout_toRightOf="@+id/img_cliente"
                android:text="Jersey negro del zara comprado hace dos semanas"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/anuncioautorlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible" />


        </RelativeLayout>
    </LinearLayout>
</android.support.design.card.MaterialCardView>